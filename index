            { id: 13, name: "Death", icon: "ðŸ’€", up: "Endings, transformation.", rev: "Resistance to change." },
            { id: 14, name: "Temperance", icon: "ðŸ·", up: "Balance, moderation, patience.", rev: "Imbalance, excess." },
            { id: 15, name: "The Devil", icon: "ðŸ”¥", up: "Attachment, shadow self.", rev: "Releasing limiting beliefs." },
            { id: 16, name: "The Tower", icon: "âš¡", up: "Sudden upheaval, revelation.", rev: "Averting disaster." },
            { id: 17, name: "The Star", icon: "âœ¨", up: "Hope, faith, renewal.", rev: "Despair, lack of faith." },
            { id: 18, name: "The Moon", icon: "ðŸŒ’", up: "Fear, illusion, subconscious.", rev: "Release of fear." },
            { id: 19, name: "The Sun", icon: "â˜€ï¸", up: "Positivity, fun, warmth.", rev: "Inner child, sadness." },
            { id: 20, name: "Judgement", icon: "ðŸŽº", up: "Rebirth, inner calling.", rev: "Self-criticism, doubt." },
            { id: 21, name: "The World", icon: "ðŸŒ", up: "Completion, accomplishment.", rev: "Seeking closure." }
        ];

        // Generate Minor Arcana
        ["Wands", "Cups", "Swords", "Pentacles"].forEach((s, si) => {
            ["Ace", "2", "3", "4", "5", "6", "7", "8", "9", "10", "Page", "Knight", "Queen", "King"].forEach((r, ri) => {
                CARDS.push({ id: 22+(si*14)+ri, name: `${r} of ${s}`, icon: si===0?"ðŸ”¥":si===1?"ðŸ’§":si===2?"ðŸ’¨":"â›°ï¸", up: `Creative ${s} energy flowing.`, rev: `Blocked ${s} energy.` });
            });
        });

        // --- APP UI ENGINE ---
        const ui = {
            view: 'home',
            spread: [],

            render(view) {
                this.view = view;
                const root = document.getElementById('app-content');
                const title = document.getElementById('view-title');
                
                // Active Nav
                document.querySelectorAll('nav div').forEach(el => el.classList.remove('tab-active'));
                const activeNav = document.getElementById(`nav-${view}`);
                if(activeNav) activeNav.classList.add('tab-active');

                root.innerHTML = '';
                
                if (view === 'home') {
                    title.innerText = 'Oracle';
                    root.innerHTML = `
                        <div class="flex flex-col items-center pt-10 text-center animate-ios">
                            <div class="w-24 h-24 bg-gradient-to-tr from-amber-500 to-amber-200 rounded-[24px] shadow-2xl flex items-center justify-center mb-10">
                                <span class="text-5xl">ðŸ”®</span>
                            </div>
                            <h2 class="text-4xl font-mystic font-bold mb-4 tracking-tight">Daily Oracle</h2>
                            <p class="text-[#8e8e93] px-10 text-[16px] mb-12 leading-snug">Tap into your intuition. Consult the universe for guidance on your path today.</p>
                            <button onclick="ui.draw()" class="w-full h-14 bg-[#007aff] rounded-2xl font-bold text-[17px] active:opacity-60 transition-all haptic shadow-lg">Start New Reading</button>
                            <div class="mt-12 opacity-10">
                                <div class="flex gap-4">
                                    <div class="w-10 h-16 border-2 border-white rounded-lg -rotate-12"></div>
                                    <div class="w-10 h-16 border-2 border-white rounded-lg translate-y-[-10px]"></div>
                                    <div class="w-10 h-16 border-2 border-white rounded-lg rotate-12"></div>
                                </div>
                            </div>
                        </div>
                    `;
                } else if (view === 'reading') {
                    title.innerText = 'Reading';
                    if (this.spread.length === 0) {
                        root.innerHTML = `<div class="pt-40 text-center text-[#8e8e93] animate-ios">No active reading.<br/><span onclick="ui.draw()" class="text-[#007aff] font-bold mt-4 block haptic">Shuffle & Draw</span></div>`;
                    } else {
                        root.innerHTML = `<div class="space-y-12 pb-10">
                            ${this.spread.map((c, i) => `
                                <div class="flex flex-col items-center animate-ios" style="animation-delay: ${i*0.1}s">
                                    <span class="text-[10px] uppercase font-bold text-amber-500/50 tracking-[3px] mb-4">${['The Past', 'The Present', 'The Future'][i]}</span>
                                    <div onclick="ui.openModal(${c.id}, ${c.rev})" class="w-52 h-80 bg-gradient-to-br from-[#2c2c2e] to-[#1c1c1e] rounded-3xl border border-white/10 shadow-2xl flex flex-col items-center justify-center p-6 haptic transition-transform ${c.rev ? 'reversed' : ''}">
                                        <div class="text-7xl mb-6">${c.icon}</div>
                                        <h3 class="font-mystic text-amber-100 text-xl font-bold leading-tight">${c.name}</h3>
                                        <div class="mt-4 w-8 h-1 bg-white/10 rounded-full"></div>
                                    </div>
                                    <p class="mt-6 px-12 text-center text-[15px] text-[#8e8e93] italic leading-relaxed">"${c.rev ? c.rev : c.up}"</p>
                                </div>
                            `).join('')}
                            <div class="pt-6 flex justify-center">
                                <button onclick="ui.draw()" class="text-[13px] font-bold text-amber-500/60 uppercase tracking-widest border border-white/10 px-6 py-2 rounded-full haptic">Clear & Redraw</button>
                            </div>
                        </div>`;
                    }
                } else if (view === 'deck') {
                    title.innerText = 'The Deck';
                    root.innerHTML = `<div class="grid grid-cols-3 gap-3 animate-ios">
                        ${CARDS.map(c => `<div onclick="ui.openModal(${c.id}, false)" class="aspect-[2/3] bg-[#1c1c1e] rounded-2xl border border-white/5 flex flex-col items-center justify-center p-2 haptic transition-all">
                            <span class="text-3xl mb-1">${c.icon}</span>
                            <span class="text-[9px] font-bold uppercase text-[#8e8e93] truncate w-full text-center px-1">${c.name}</span>
                        </div>`).join('')}
                    </div>`;
                }
            },

            draw() {
                this.spread = [...CARDS]
                    .sort(() => Math.random() - 0.5)
                    .slice(0, 3)
                    .map(c => ({
                        ...c,
                        rev: Math.random() > 0.7
                    }));
                this.render('reading');
            },

            openModal(id, isRev) {
                const card = CARDS.find(c => c.id === id);
                const inner = document.getElementById('sheet-inner');
                inner.innerHTML = `
                    <div class="flex flex-col items-center">
                        <div class="w-36 h-56 bg-gradient-to-b from-[#3a3a3c] to-[#1c1c1e] rounded-2xl flex flex-col items-center justify-center border border-white/20 mb-10 ${isRev ? 'reversed' : ''}">
                            <span class="text-5xl mb-3">${card.icon}</span>
                            <span class="text-xs font-mystic text-amber-200 font-bold">${card.name}</span>
                        </div>
                        <div class="w-full space-y-8">
                            <div>
                                <h4 class="text-[#007aff] text-[12px] font-bold uppercase tracking-widest mb-3">Upright Meaning</h4>
                                <p class="text-[18px] leading-tight text-white font-medium">"${card.up}"</p>
                            </div>
                            <div class="pt-6 border-t border-white/5">
                                <h4 class="text-[#ff3b30] text-[12px] font-bold uppercase tracking-widest mb-3">Reversed Meaning</h4>
                                <p class="text-[18px] leading-tight text-white font-medium">"${card.rev}"</p>
                            </div>
                        </div>
                        <button onclick="ui.closeModal()" class="w-full mt-12 h-14 bg-[#3a3a3c] rounded-2xl font-bold text-[17px] text-white active:bg-white active:text-black transition-all">Done</button>
                    </div>
                `;
                document.getElementById('overlay').classList.remove('hidden');
                document.getElementById('sheet').classList.add('active');
            },

            closeModal() {
                document.getElementById('overlay').classList.add('hidden');
                document.getElementById('sheet').classList.remove('active');
            }
        };

        // Initialize immediately when DOM is ready
        document.addEventListener('DOMContentLoaded', () => {
            ui.render('home');
        });
    </script>
