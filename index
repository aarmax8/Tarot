<body>

    <header>
        <h1 id="header-text">Oracle</h1>
    </header>

    <!-- HOME VIEW (Visible by default) -->
    <div id="view-home" class="view active">
        <div class="hero">
            <div class="icon-circle">ðŸ”®</div>
            <h2 style="font-size: 32px; margin: 0 0 10px 0;">The Oracle</h2>
            <p style="color: var(--gray); font-size: 16px; margin-bottom: 40px;">Step into the light. Seek answers from the ancient cards.</p>
            <button class="btn" onclick="app.draw()">Get Reading</button>
        </div>
    </div>

    <!-- READING VIEW -->
    <div id="view-reading" class="view">
        <div id="spread-container"></div>
        <button class="btn" style="background: #2c2c2e" onclick="app.draw()">New Reading</button>
    </div>

    <!-- DECK VIEW -->
    <div id="view-deck" class="view">
        <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 10px;" id="deck-grid"></div>
    </div>

    <!-- BOTTOM NAV -->
    <nav>
        <div class="tab active" id="tab-home" onclick="app.nav('home')">
            <span class="tab-icon">âœ¨</span>
            <span>Home</span>
        </div>
        <div class="tab" id="tab-reading" onclick="app.nav('reading')">
            <span class="tab-icon">ðŸ”®</span>
            <span>Reading</span>
        </div>
        <div class="tab" id="tab-deck" onclick="app.nav('deck')">
            <span class="tab-icon">ðŸ“–</span>
            <span>Library</span>
        </div>
    </nav>

    <!-- MODAL -->
    <div id="modal" onclick="app.close()">
        <div class="sheet" id="sheet" onclick="event.stopPropagation()">
            <div class="handle"></div>
            <div id="sheet-content"></div>
            <button class="btn" style="background: #333; margin-top: 30px;" onclick="app.close()">Dismiss</button>
        </div>
    </div>

    <script>
        const DECK = [
            { n: "The Fool", i: "ðŸƒ", u: "New beginnings.", r: "Recklessness." },
            { n: "Magician", i: "ðŸª„", u: "Power, manifest.", r: "Manipulation." },
            { n: "Priestess", i: "ðŸŒ™", u: "Intuition.", r: "Secrets." },
            { n: "Empress", i: "ðŸŒ¿", u: "Abundance.", r: "Dependence." },
            { n: "Emperor", i: "ðŸ‘‘", u: "Structure.", r: "Rigidity." },
            { n: "Hierophant", i: "ðŸ›ï¸", u: "Tradition.", r: "New beliefs." },
            { n: "Lovers", i: "â¤ï¸", u: "Harmony.", r: "Disharmony." },
            { n: "Chariot", i: "âš”ï¸", u: "Victory.", r: "Lack of control." },
            { n: "Strength", i: "ðŸ¦", u: "Courage.", r: "Self-doubt." },
            { n: "Hermit", i: "ðŸ®", u: "Introspection.", r: "Isolation." },
            { n: "Wheel", i: "ðŸŽ¡", u: "Good luck.", r: "Bad luck." },
            { n: "Justice", i: "âš–ï¸", u: "Truth.", r: "Unfairness." },
            { n: "Death", i: "ðŸ’€", u: "Transformation.", r: "Resistance." },
            { n: "Sun", i: "â˜€ï¸", u: "Vitality.", r: "Sadness." },
            { n: "World", i: "ðŸŒ", u: "Completion.", r: "Seeking closure." }
        ];

        const app = {
            nav(viewId) {
                // Update tabs
                document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                document.getElementById('tab-' + viewId).classList.add('active');

                // Update views
                document.querySelectorAll('.view').forEach(v => v.classList.remove('active'));
                document.getElementById('view-' + viewId).classList.add('active');

                document.getElementById('header-text').innerText = viewId.toUpperCase();
                
                if(viewId === 'deck') this.renderDeck();
            },

            draw() {
                const container = document.getElementById('spread-container');
                const spread = [...DECK].sort(() => Math.random() - 0.5).slice(0, 3);
                
                container.innerHTML = spread.map((c, i) => {
                    const isRev = Math.random() > 0.7;
                    return `
                        <div class="card-slot">
                            <div class="slot-label">${['Past', 'Present', 'Future'][i]}</div>
                            <div class="card ${isRev ? 'reversed' : ''}" onclick="app.open('${c.n}', '${c.i}', '${c.u}', '${c.r}', ${isRev})">
                                <div class="card-emoji">${c.i}</div>
                                <div class="card-name">${c.n}</div>
                            </div>
                            <div class="meaning">"${isRev ? c.r : c.u}"</div>
                        </div>
                    `;
                }).join('');

                this.nav('reading');
            },

            renderDeck() {
                const grid = document.getElementById('deck-grid');
                grid.innerHTML = DECK.map(c => `
                    <div style="background: #1c1c1e; border-radius: 12px; padding: 15px; text-align: center;" onclick="app.open('${c.n}', '${c.i}', '${c.u}', '${c.r}', false)">
                        <div style="font-size: 30px; margin-bottom: 5px;">${c.i}</div>
                        <div style="font-size: 10px; color: #888; text-transform: uppercase;">${c.n}</div>
                    </div>
                `).join('');
            },

            open(n, i, u, r, isRev) {
                const content = document.getElementById('sheet-content');
                content.innerHTML = `
                    <div class="icon-circle" style="background: #2c2c2e; margin-bottom: 20px;">${i}</div>
                    <h2 style="margin: 0 0 20px 0;">${n} ${isRev ? '(Reversed)' : ''}</h2>
                    <div style="text-align: left; padding: 0 10px;">
                        <p style="color: #007aff; font-size: 12px; font-weight: bold; margin-bottom: 5px;">UPRIGHT</p>
                        <p style="margin-bottom: 20px;">${u}</p>
                        <p style="color: #ff3b30; font-size: 12px; font-weight: bold; margin-bottom: 5px;">REVERSED</p>
                        <p>${r}</p>
                    </div>
                `;
                document.getElementById('modal').style.display = 'flex';
                setTimeout(() => document.getElementById('sheet').classList.add('open'), 10);
            },

            close() {
                document.getElementById('sheet').classList.remove('open');
                setTimeout(() => document.getElementById('modal').style.display = 'none', 300);
            }
        };
    </script>
</body>
